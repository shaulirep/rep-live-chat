{
  "name": "Rep Live",
  "description": "Rep Live is a customer support tool for instant messaging channels",
  "website": "https://www.hellorep.ai/",
  "repository": "https://github.com/shaulirep/rep-live-chat",
  "logo": "https://d36vbr8l8uc1ea.cloudfront.net/live-chat/logo_thumbnail.svg",
  "keywords": [
    "live chat",
    "customer support",
    "ruby",
    "rails",
    "vue"
  ],
  "success_url": "/",
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "RACK_ENV": {
      "description": "Environment for rack middleware.",
      "value": "production"
    },
    "RAILS_ENV": {
      "description": "Environment for rails middleware.",
      "value": "production"
    },
    "FRONTEND_URL": {
      "description": "Public root URL of the Rep Live installation. This will be used in the emails.",
      "value": "https://CHANGE.herokuapp.com"
    },
    "INSTALLATION_ENV": {
      "description": "Installation method used for Rep Live.",
      "value": "heroku"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "FREE"
    },
    "worker": {
      "quantity": 1,
      "size": "FREE"
    }
  },
  "image": "heroku/ruby",
  "addons": [ "heroku-redis", "heroku-postgresql"],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "bundle exec rake test"
      }
    }
  }
}
